<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <Button
            android:id="@+id/loginButton"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:text="Logg inn"
            app:layout_constraintBottom_toBottomOf="@id/nav_view"
            app:layout_constraintVertical_bias="0.0"
            android:background="@drawable/rounded_corners" android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/nav_host_fragment" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintTop_toTopOf="@+id/nav_host_fragment"
            android:layout_marginTop="8dp"/>
    <FrameLayout
            android:layout_width="364dp"
            android:layout_height="127dp"
            android:background="#DDDDDDDD" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.51" android:id="@+id/frameLayout4">

    </FrameLayout>
    <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toTopOf="@id/nav_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:navGraph="@navigation/mobile_navigation" android:background="#DDDDDDDD"/>

    <Button
            android:id="@+id/addDinnerButton"
            android:layout_width="162dp"
            android:layout_height="48dp"
            android:onClick="onClick"
            android:text="Opprett middag"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.853"
            android:background="@drawable/rounded_corners" android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="@+id/nav_host_fragment"/>
    <FrameLayout
            android:layout_width="363dp"
            android:layout_height="124dp"
            android:background="#DDDDDDDD" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/frameLayout4"
            android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.52">

    </FrameLayout>
    <FrameLayout
            android:layout_width="364dp"
            android:layout_height="127dp"
            android:background="#DDDDDDDD" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/frameLayout"
            app:layout_constraintTop_toTopOf="@+id/nav_host_fragment"
            app:layout_constraintBottom_toBottomOf="@+id/nav_view" app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintVertical_bias="0.144">

    </FrameLayout>
    <ImageButton
            android:layout_width="54dp"
            android:layout_height="47dp" app:srcCompat="@android:drawable/ic_menu_myplaces"
            android:id="@+id/profileButton"
            android:background="@drawable/rounded_corners" app:layout_constraintTop_toTopOf="@+id/nav_host_fragment"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout"
            app:layout_constraintStart_toEndOf="@+id/loginButton" android:layout_marginLeft="196dp"
            android:layout_marginStart="196dp" app:layout_constraintVertical_bias="0.333"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:text="Kari Nordmann"
            android:layout_width="162dp"
            android:layout_height="17dp" android:id="@+id/profileText"
            android:textSize="12sp" app:layout_constraintStart_toEndOf="@+id/loginButton"
            app:layout_constraintTop_toTopOf="@+id/nav_host_fragment"
            android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.914" app:layout_constraintEnd_toStartOf="@+id/profileButton"
            android:gravity="right"/>
    <Button
            android:text="Moderer innhold"
            android:layout_width="163dp"
            android:layout_height="47dp" android:id="@+id/adminButton"
            app:layout_constraintEnd_toStartOf="@+id/addDinnerButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintVertical_bias="0.853"
            android:background="@drawable/rounded_corners" android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="@+id/nav_host_fragment" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>