<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.EmptyActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" >
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toTopOf="@id/nav_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:navGraph="@navigation/mobile_navigation"/>
    <EditText
            android:id="@+id/editTextDinner"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:hint="Type rett"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="136dp"
    />
    <EditText
            android:id="@+id/editTextDate"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:hint="Dato"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDinner" android:layout_marginTop="20dp"/>
    <EditText
            android:id="@+id/editTextTime"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:hint="Klokkeslett"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate"
            android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"/>
    <EditText
            android:id="@+id/editTextGuests"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:hint="Antall gjester"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPlace" android:layout_marginTop="28dp"/>
    <EditText
            android:id="@+id/editTextPlace"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:hint="Sted"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/editTextTime"
            android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>
    <Button
            android:text="Publiser middag"
            android:layout_width="150dp"
            android:layout_height="49dp" android:id="@+id/publishDinnerButton"
            android:background="@drawable/rounded_corners"
            android:textStyle="normal"
            android:padding="15dp" android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/editTextGuests"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.647" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.865"/>
    <Switch
            android:text="Vegetar  "
            android:layout_width="wrap_content"
            android:layout_height="27dp" android:id="@+id/switchVegetarian"
            android:textOn="Vegetar" android:textOff="Ikke-vegetar"
            android:textColor="#EE1C8722" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/editTextGuests"
            app:layout_constraintEnd_toEndOf="@+id/editTextGuests" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextGuests" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/publishDinnerButton" app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintVertical_bias="0.189"/>
    <TextView
            android:text="DineTime"
            android:layout_width="411dp"
            android:layout_height="74dp" android:id="@+id/textViewDineTime"
            android:gravity="center"
            android:background="#EE1C8722" android:textColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="78dp"
            android:layout_height="74dp" app:srcCompat="@drawable/abc_vector_test"
            android:id="@+id/backButton" android:background="#001C8722"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <Switch
            android:text="Dele utgifter"
            android:layout_width="wrap_content"
            android:layout_height="27dp" android:id="@+id/switchSplitExpenses"
            android:textOn="Dele utgifter" android:textOff="Ikke dele utgifter"
            android:textColor="#EE1C8722" android:textStyle="bold"
            tools:layout_editor_absoluteX="146dp" app:layout_constraintTop_toBottomOf="@+id/switchVegetarian"
            app:layout_constraintBottom_toTopOf="@+id/nav_view" app:layout_constraintVertical_bias="0.115"/>


</androidx.constraintlayout.widget.ConstraintLayout>