<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.EmptyActivity">

    <EditText
            android:id="@+id/editTextDinner"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:hint="Type rett"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="96dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="100dp"
    />

    <Spinner
        android:id="@+id/days_spinner"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="228dp"
        android:layout_marginRight="228dp"
        android:ems="10"
        app:layout_constraintTop_toBottomOf="@+id/editTextDinner"
        app:layout_constraintStart_toStartOf="@id/editTextPlace"/>

    <Spinner
        android:id="@+id/months_spinner"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDinner" />


    <Spinner
        android:id="@+id/hour_spinner"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="212dp"
        android:layout_marginRight="212dp"
        android:ems="10"

        app:layout_constraintTop_toBottomOf="@+id/months_spinner"
        app:layout_constraintStart_toStartOf="@id/editTextPlace"/>

    <Spinner
        android:id="@+id/minutes_spinner"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="90dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/months_spinner" />



    <Spinner
            android:id="@+id/guests_spinner"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="90dp"
            android:hint="Antal gjester"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPlace" />



    <EditText
            android:id="@+id/editTextPlace"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:hint="Sted"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/hour_spinner"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="90dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>
    <Button
            android:text="Publiser middag"
            android:layout_width="150dp"
            android:layout_height="49dp" android:id="@+id/publishDinnerButton"
            android:background="@drawable/rounded_corners"
            android:textStyle="normal"
            android:padding="15dp" android:textColor="#E3FCFF"
            app:layout_constraintTop_toBottomOf="@+id/guests_spinner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.588" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <Switch
            android:text="Vegetar"
            android:layout_width="wrap_content"
            android:layout_height="27dp" android:id="@+id/switchVegetarian"
            android:checked="false"
            android:textOn="Vegetar" android:textOff="Ikke-vegetar"
            android:textColor="#EE1C8722" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guests_spinner"
            app:layout_constraintEnd_toEndOf="@+id/guests_spinner" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/guests_spinner" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/publishDinnerButton" app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintVertical_bias="0.189"/>
    <ImageButton
            android:layout_width="51dp"
            android:layout_height="51dp" app:srcCompat="@drawable/abc_vector_test"
            android:id="@+id/backButton" android:background="@drawable/rounded_corners"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginTop="24dp" android:layout_marginStart="24dp"/>
    <Switch
            android:text="Dele utgifter"
            android:layout_width="wrap_content"
            android:layout_height="27dp" android:id="@+id/switchSplitExpenses"
            android:checked="false"
            android:textOn="Dele utgifter" android:textOff="Ikke dele utgifter"
            android:textColor="#EE1C8722" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/switchVegetarian"
            app:layout_constraintBottom_toTopOf="@+id/nav_view" app:layout_constraintVertical_bias="0.113"
            app:layout_constraintStart_toStartOf="@+id/guests_spinner"
            app:layout_constraintEnd_toEndOf="@+id/guests_spinner" app:layout_constraintHorizontal_bias="0.463"/>

    <TextView
        android:id="@+id/colon"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="200dp"
        android:ems="10"
        android:text=":"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/months_spinner" />


</androidx.constraintlayout.widget.ConstraintLayout>