<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.DinnerActivity">

    <ImageButton
        android:layout_width="51dp"
        android:layout_height="51dp" app:srcCompat="@drawable/abc_vector_test"
        android:id="@+id/backButton" android:background="@drawable/rounded_corners"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="24dp" android:layout_marginTop="24dp" android:layout_marginStart="24dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" >
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <Button
        android:id="@+id/registerForDinnerButton"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corners"
        android:padding="15dp"
        android:text="Meld deg på"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleUtgifter"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title"
        android:layout_width="370dp"
        android:layout_height="59dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="s middag"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/typeRett"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:text="Type Rett: "
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/dato"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Dato: "
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeRett" />

    <TextView
        android:id="@+id/tidspunkt"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Tidspunkt: "
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dato" />

    <TextView
        android:id="@+id/sted"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Sted: "
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tidspunkt" />

    <TextView
        android:id="@+id/gjester"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Påmeldte gjester: "
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sted" />

    <TextView
        android:id="@+id/vegetar"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Vegetar: "
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gjester" />

    <TextView
        android:id="@+id/deleUtgifter"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Dele utgifter: "
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vegetar" />

    <Button
        android:id="@+id/deleteDinnerButton"
        android:layout_width="119dp"
        android:layout_height="49dp"
        android:layout_marginStart="184dp"
        android:layout_marginLeft="184dp"
        android:background="@drawable/rounded_corners"
        android:text="Slett middag"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685" />

</androidx.constraintlayout.widget.ConstraintLayout>